<h1>Create a post</h1>

<%= form_for @post do |f| %>

<div class="fields">
  <%= f.label :image %>
  <%= f.text_field :image %>
</div>

<div class="fields">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="fields">
  <%= f.label :source %>
  <%= f.text_field :source %>
</div>

<div class="fields">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<%= f.submit "Create" %>

<% end %>
