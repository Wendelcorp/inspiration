<h1>Index Page</h1>

<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>
  </li>
<% end %>

<% @posts.each do |post| %>
<div class="index-post-housing">
<%= image_tag post.image, :class => "index-thumbnail" %>
<h2><%= post.title %></h2>
<p><%= post.description %></p>
<p><%= post.source %></p>
</div>
<% end %>
